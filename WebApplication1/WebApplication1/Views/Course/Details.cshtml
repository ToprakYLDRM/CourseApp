@model Course;


<div class="row">
    <div class="col-md-4">
        <img src="~/img/@Model.Image" width="500" class="img-fluid rounded" alt="" />
    </div>
    <div class="col-md-8">
        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
            <h5 class="card-title">@Model.Title</h5>
        </a>
        <p class="card-text">@Model.Description</p>
        <div>
            @if (Model.Tags != null) // model üzerindeki tags null değilse aşağıdaki kodları çalıştır.
            {
                @foreach (var tag in Model.Tags)  // model üzerindeki tag leri tek tek dolaşıp  ve her gelen tag bilgisiyle sayfada bir etiket yapsıını göreceğiz.
                {
                    <span class="badge bg-primary">@tag</span>
                }
            }
        </div>
    </div>
</div>
